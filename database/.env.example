# =============================================
# Supabase Environment Variables
# Copy this file to .env.local and fill in your values
# =============================================

# Supabase Project Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database Configuration (for direct connections)
DATABASE_URL=postgresql://postgres:your-password@db.your-project-id.supabase.co:5432/postgres
DIRECT_URL=postgresql://postgres:your-password@db.your-project-id.supabase.co:5432/postgres

# Application Configuration
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Payment Gateway Configuration (future use)
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# File Storage Configuration
SUPABASE_STORAGE_BUCKET=quimimar-assets
NEXT_PUBLIC_SUPABASE_STORAGE_URL=https://your-project-id.supabase.co/storage/v1/object/public

# Analytics Configuration (optional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_REAL_TIME=true
ENABLE_NOTIFICATIONS=true
ENABLE_B2B_FEATURES=true

# Development Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
LOG_LEVEL=debug

# Rate Limiting Configuration
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=15

# Security Configuration
BCRYPT_ROUNDS=12
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# Business Configuration
DEFAULT_CURRENCY=EUR
DEFAULT_LANGUAGE=es
DEFAULT_TIMEZONE=Europe/Madrid
VAT_RATE=0.21

# Shipping Configuration
FREE_SHIPPING_THRESHOLD=50.00
DEFAULT_SHIPPING_COST=5.95

# Admin Configuration
ADMIN_EMAIL=admin@quimimar.com
SUPER_ADMIN_EMAIL=superadmin@quimimar.com

# External APIs (future integrations)
SHIPPING_API_KEY=your-shipping-api-key
INVENTORY_API_URL=https://api.inventory-system.com
CRM_API_KEY=your-crm-api-key

# Error Monitoring (optional)
SENTRY_DSN=https://your-sentry-dsn
SENTRY_ORG=your-org
SENTRY_PROJECT=your-project

# Redis Configuration (for caching, if needed)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30